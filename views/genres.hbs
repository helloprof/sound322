<div class="container">
    </br>
  <div class="row">
    <a href="/genres/new" class="btn btn-light">Add Genre</a>
    <div class="col-md-12">
      </br>
      <h2>Genres</h2>
      </hr>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Genre</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
            <tr>
              <td>{{genreID}}</td>
              <td><a class="btn btn-warning" href="/albums?genre={{genreID}}">{{genre}}</a></td>
              <td><a class="btn btn-danger" href="/genres/delete/{{genreID}}">DELETE</a></td>

            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{#unless data}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>