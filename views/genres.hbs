<div class="container">
  <div class="row">
    <div class="col-md-12">
      </br>
      <h2>Genres</h2>
      </hr>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Genre</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
            <tr>
              <td>{{id}}</td>
              <td><a href="/albums?genre={{genre}}">{{genre}}</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{#unless data}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>